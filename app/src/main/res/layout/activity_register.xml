<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sopt.inydus_demo.register.RegisterActivity"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"  >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editName_reg"
                android:background="@drawable/edit_border"
                android:inputType="text"
                android:singleLine="true"
                android:hint="이름"
                android:textColorHint="#999999"
                android:textSize="15sp"
                android:padding="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editEmail_reg"
                android:background="@drawable/edit_border"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:hint="이메일"
                android:textColorHint="#999999"
                android:textSize="15sp"
                android:padding="10dp"
                android:layout_marginTop="10dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/btn_border"
                android:layout_marginTop="10dp"
                android:text="중복 확인"
                android:id="@+id/btnDuplication" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editPW_reg"
                android:background="@drawable/edit_border"
                android:inputType="textPassword"
                android:singleLine="true"
                android:hint="비밀번호"
                android:textColorHint="#999999"
                android:textSize="15sp"
                android:padding="10dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6~20자의 영문, 숫자 조합만 가능합니다."
                android:layout_margin="5dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editPW_test"
                android:background="@drawable/edit_border"
                android:inputType="textPassword"
                android:singleLine="true"
                android:hint="비밀번호 확인"
                android:textColorHint="#999999"
                android:textSize="15sp"
                android:padding="10dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호를 재입력해주세요."
                android:layout_margin="5dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/btn_border"
                android:layout_marginTop="10dp"
                android:text="우편번호 검색"
                android:id="@+id/btnAddress_reg" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editAddress_reg"
                android:background="@drawable/edit_border"
                android:inputType="text"
                android:singleLine="true"
                android:hint="거주지 주소"
                android:textColorHint="#999999"
                android:textSize="15sp"
                android:padding="10dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editAddress_detail"
                android:background="@drawable/edit_border"
                android:inputType="text"
                android:singleLine="true"
                android:hint="상세 주소"
                android:textColorHint="#999999"
                android:textSize="15sp"
                android:padding="10dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editPhoneNum_reg"
                android:background="@drawable/edit_border"
                android:inputType="number"
                android:singleLine="true"
                android:hint="전화번호"
                android:textColorHint="#999999"
                android:textSize="15sp"
                android:padding="10dp"
                android:layout_marginTop="20dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/btn_border"
                android:layout_marginTop="10dp"
                android:text="인증번호 발송"
                android:id="@+id/btnVerification" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editVerification"
                android:background="@drawable/edit_border"
                android:inputType="number"
                android:singleLine="true"
                android:hint="인증번호"
                android:textColorHint="#999999"
                android:textSize="15sp"
                android:padding="10dp"
                android:layout_marginTop="10dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/btn_border"
                android:layout_marginTop="30dp"
                android:text="회원가입"
                android:id="@+id/btnRegister_reg" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
